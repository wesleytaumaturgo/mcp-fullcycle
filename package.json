{
  "name": "mcp-fullcycle",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "setup": "./setup.sh",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache",
    "mcp:up": "docker compose up -d",
    "mcp:down": "docker compose down",
    "mcp:health": "curl -f http://localhost:3000/healthz",
    "mcp:logs": "docker compose logs -f",
    "prompt:planning": "echo 'Planning prompt for MCP' > test_output.txt",
    "prompt:implementation": "echo 'Implementation prompt for MCP'",
    "prompt:review": "echo 'Review prompt for MCP'",
    "mesa:run": "echo 'Running Mesa Tech discussion'",
    "auditor:check": "echo 'Running Super Auditor checks'",
    "codex:generate": "echo 'Generating tasks with Codex'",
    "flow:intake": "npm run dev -- --phase=intake",
    "flow:analysis": "npm run dev -- --phase=analysis",
    "flow:architecture": "npm run dev -- --phase=architecture",
    "flow:implementation": "npm run dev -- --phase=implementation",
    "flow:tests": "npm run dev -- --phase=tests",
    "flow:security": "npm run dev -- --phase=security",
    "flow:costs": "npm run dev -- --phase=costs",
    "flow:go_no_go": "npm run dev -- --phase=go_no_go",
    "flow:handover": "npm run dev -- --phase=handover",
    "flow:closure": "npm run dev -- --phase=closure",
    "chat:mesa": "echo '@mesa-tech: Iniciando discussão em rodadas. Objetivo: $npm_config_goal'",
    "chat:mcp": "echo '@mcp: Executando fluxo MCP. Fase: $npm_config_phase'",
    "chat:auditor": "echo '@super-auditor: Executando validações de segurança e qualidade'",
    "chat:codex": "echo '@codex-tasks: Gerando tarefas para o projeto'",
    "validate": "npm run lint && npm run typecheck && npm test",
    "deploy": "./deploy.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/redis": "^4.0.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.1.0",
    "redis": "^5.9.0"
  }
}
